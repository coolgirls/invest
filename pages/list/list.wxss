/* pages/list/list.wxss */
page{
  background: #f2f3f4;
  font-size: 14px;
  color: #101010;
}

.list-item{
  background: #fff;
  margin: 10px;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  padding: 15px;
}

.item-left{
  width:70%;
  border-right:1px solid #dddcdc;
}

.item-right{
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.price{
  color: #e51c23;
}